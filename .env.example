# Base de datos (Docker)
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=cdattg
DB_USERNAME=cdattg_user
DB_PASSWORD=password
DB_ROOT_PASSWORD=rootpassword

# Cache y sesiones (Redis)
BROADCAST_DRIVER=log
