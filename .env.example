APP_NAME="CDATTG Asistencia"
APP_ENV=local             # local | production | testing
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost   # https://tu-dominio.com en producción

LOG_CHANNEL=stack
LOG_LEVEL=debug            # warning/error en producción

DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=cdattg
DB_USERNAME==cdattg_user
DB_PASSWORD=password
DB_ROOT_PASSWORD=root

CACHE_DRIVER=file
QUEUE_CONNECTION=database
SESSION_DRIVER=file
BROADCAST_DRIVER=log

MAIL_MAILER=smtp
MAIL_HOST=mailpit          # smtp.tu-proveedor.com en producción
MAIL_PORT=1025             # 587 en producción
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null       # tls en producción
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

VITE_PORT=5173
VITE_APP_URL=${APP_URL}

RUN_MIGRATIONS=true
RUN_MIGRATIONS_FRESH=false
RUN_SEEDERS=true
CACHE_BOOTSTRAP=false      # true cuando APP_ENV=production
RUN_BUILD_ASSETS=false

QUEUE_SLEEP=3
QUEUE_TRIES=3
QUEUE_MAX_JOBS=1000
QUEUE_QUEUES=sofia-validation,default

# --- WebSockets / Reverb ---
BROADCAST_DRIVER=null
REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=8080
REVERB_HOST=reverb
REVERB_PORT=443  # o el que uses
REVERB_APP_ID=...
REVERB_APP_KEY=...
REVERB_APP_SECRET=...

# Variables opcionales para ajustar mounts en Docker
APP_CODE_VOLUME_TYPE=bind      # bind (dev) | volume (prod)
APP_CODE_SOURCE=./             # ruta al código cuando se usa bind
APP_CODE_SYNC_STRATEGY=delegated
BUILD_ENV=local                # local | production
NODE_ENV=development           # development | production

# ---- Almacenamiento en AWS S3 ----
FILESYSTEM_DISK=local          # cambia a s3 cuando quieras usar S3 por defecto
AWS_ACCESS_KEY_ID=tu_access_key
AWS_SECRET_ACCESS_KEY=tu_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=tu-bucket
AWS_URL=
AWS_ENDPOINT=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ---- Almacenamiento en Google Drive (usando Spatie o similar) ----
GOOGLE_DRIVE_CLIENT_ID=tu_client_id
GOOGLE_DRIVE_CLIENT_SECRET=tu_client_secret
GOOGLE_DRIVE_REFRESH_TOKEN=tu_refresh_token
GOOGLE_DRIVE_FOLDER_ID=raíz_o_folder
GOOGLE_DRIVE_TEAM_DRIVE_ID=

AUDIT_DEFAULT_USER_ID=1