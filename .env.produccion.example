# --- Configuraci√≥n base ---
APP_NAME=CDATTG
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://cdattg.example.com
ASSET_URL=https://cdn.cdattg.example.com

# --- Logging ---
LOG_CHANNEL=daily
LOG_LEVEL=info
LOG_STACK=single

# --- Base de datos ---
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=cdattg
DB_USERNAME=cdattg_user
DB_PASSWORD=SUPER_SECRET_PASSWORD

# --- Redis ---
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=REDIS_SECRET

# --- Correo ---
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=no-reply@cdattg.com
MAIL_PASSWORD=MAIL_APP_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="no-reply@cdattg.com"
MAIL_FROM_NAME="${APP_NAME}"

# --- WebSockets / Reverb ---
REVERB_APP_ID=prod-app
REVERB_APP_KEY=prod-key
REVERB_APP_SECRET=prod-secret
REVERB_HOST=127.0.0.1
REVERB_PORT=8080
REVERB_SCHEME=https
REVERB_VERIFY_PEER=true
REVERB_SCALING_ENABLED=true

# --- Vite (Frontend compilado) ---
VITE_APP_NAME="${APP_NAME}"
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# --- AWS ---
AWS_ACCESS_KEY_ID=AWS_KEY
AWS_SECRET_ACCESS_KEY=AWS_SECRET
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=cdattg-bucket
AWS_USE_PATH_STYLE_ENDPOINT=false

# --- Google Drive ---
GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=
GOOGLE_DRIVE_REFRESH_TOKEN=
GOOGLE_DRIVE_FOLDER_ID=
GOOGLE_DRIVE_TEAM_DRIVE_ID=

# --- Overrides Node/PHP ---
NODE_ENV=production
BUILD_ENV=production